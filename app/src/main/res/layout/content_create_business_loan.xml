<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.faraz_khan.bank2.CreateBusinessLoan"
    tools:showIn="@layout/activity_create_business_loan">

    <EditText
        android:id="@+id/first_name_businessloan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter Customer First Name" />

    <EditText
        android:id="@+id/surname_businessloan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter Customer Surname" />

    <EditText
        android:id="@+id/ID_businessloan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter Customer ID" />

    <EditText
        android:id="@+id/accnum_businessloan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter account number for funds to be paid into" />

    <EditText
        android:id="@+id/amount_businessloan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter Loan Amount" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="createBusinessLoanButton"
        android:text="ENTER" />

    <TextView
        android:id="@+id/businessloan_output"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="..." />


</LinearLayout>
